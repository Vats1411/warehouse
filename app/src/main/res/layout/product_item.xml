<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvProductItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#414052">

            <TextView
                android:id="@+id/tvProductLabel"
                android:layout_width="0dp"
                android:text="@string/product_name"
                android:layout_height="wrap_content"
                android:textColor="#F18413"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/idProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvProductLabel"
                app:layout_constraintBottom_toBottomOf="@id/tvProductLabel"
                app:layout_constraintStart_toEndOf="@id/tvProductLabel"/>


            <TextView
                android:id="@+id/tvProductQtyLabel"
                android:layout_width="0dp"
                android:text="@string/qty"
                android:layout_height="wrap_content"
                android:textColor="#F18413"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProductLabel"/>

            <TextView
                android:id="@+id/tvProductQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvProductQtyLabel"
                app:layout_constraintBottom_toBottomOf="@id/tvProductQtyLabel"
                app:layout_constraintStart_toEndOf="@+id/tvProductQtyLabel"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tvProductDesLabel"
                android:layout_width="0dp"
                android:text="@string/description"
                android:layout_height="wrap_content"
                android:textColor="#F18413"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProductQtyLabel"/>
            <TextView
                android:id="@+id/tvProductDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProductDesLabel"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>